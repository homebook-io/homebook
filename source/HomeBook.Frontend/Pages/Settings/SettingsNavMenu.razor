@using HomeBook.Frontend.Core.Icons
@using HomeBook.Frontend.UI.Resources
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<LocalizationStrings> Loc
@inject IConfiguration Configuration

<MudPaper>

    <MudNavMenu Bordered="true"
                Dense="true"
                Class="mud-navmenu-first-level mud-navmenu-xxl"
                Color="Color.Secondary">

        <MudNavLink Match="NavLinkMatch.All"
                    Href="/Settings"
                    Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Gear">
            +General
        </MudNavLink>

        <MudNavLink Match="NavLinkMatch.All"
                    Href="/Settings/Appearance"
                    Icon="@HomeBookIcons.Icons8.LiquidGlassColor.PaintRoller">
            +Appearance
        </MudNavLink>

        <MudNavLink Match="NavLinkMatch.All"
                    Href="/Settings/Localization"
                    Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Globe">
            @Loc[nameof(LocalizationStrings.Settings_NavMenu_LanguageRegion_Text)]
        </MudNavLink>

        <MudNavLink Match="NavLinkMatch.All"
                    Href="/Settings/About"
                    Icon="@HomeBookIcons.Icons8.LiquidGlassColor.SystemInformation">
            @Loc[nameof(LocalizationStrings.Settings_NavMenu_About_Text)]
        </MudNavLink>

        <MudDivider Class="my-1"/>

        <AuthorizeView Roles="Admin">

            <MudNavLink Match="NavLinkMatch.Prefix"
                        Href="/Settings/Users"
                        Icon="@HomeBookIcons.Icons8.LiquidGlassColor.People">
                @Loc[nameof(LocalizationStrings.Settings_NavMenu_Users_Text)]
            </MudNavLink>

            <MudNavLink Match="NavLinkMatch.Prefix"
                        Href="/Settings/Instance"
                        Icon="@HomeBookIcons.Icons8.LiquidGlassColor.LaptopSettings">
                @Loc[nameof(LocalizationStrings.Settings_NavMenu_HomebookConfiguration_Text)]
            </MudNavLink>

            <MudNavLink Match="NavLinkMatch.Prefix"
                        Href="/Settings/Modules"
                        Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Module">
                @Loc[nameof(LocalizationStrings.Settings_NavMenu_HomebookModules_Text)]
            </MudNavLink>

            <MudNavLink Match="NavLinkMatch.Prefix"
                        Href="/Settings/Database"
                        Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Database">
                +Database
            </MudNavLink>

            <MudNavLink Match="NavLinkMatch.Prefix"
                        Href="/Settings/Ai"
                        Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Ai">
                +AI Configuration
            </MudNavLink>

            @if (_showDeveloperArea)
            {
                <MudDivider Class="my-1"/>

                <MudNavLink Match="NavLinkMatch.All"
                            Href="/Settings/Developer"
                            Icon="@HomeBookIcons.Icons8.LiquidGlassColor.SourceCode">
                    @Loc[nameof(LocalizationStrings.Settings_NavMenu_Developer_Text)]
                </MudNavLink>

                <MudNavLink Match="NavLinkMatch.All"
                            Href="/Settings/Developer/Components"
                            Icon="@HomeBookIcons.Icons8.GlassMorphism.Web">
                    @Loc[nameof(LocalizationStrings.Settings_NavMenu_DeveloperComponents_Text)]
                </MudNavLink>

                <MudNavLink Match="NavLinkMatch.All"
                            Href="/Settings/Developer/Colors"
                            Icon="@HomeBookIcons.Icons8.GlassMorphism.FillColor">
                    @Loc[nameof(LocalizationStrings.Settings_NavMenu_DeveloperColors_Text)]
                </MudNavLink>

                <MudNavLink Match="NavLinkMatch.All"
                            Href="/Settings/Developer/Icons"
                            Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Image">
                    @Loc[nameof(LocalizationStrings.Settings_NavMenu_DeveloperIcons_Text)]
                </MudNavLink>
            }

            <MudDivider Class="my-1"/>

        </AuthorizeView>

        <MudNavLink Match="NavLinkMatch.All"
                    Href="/Settings/Feedback"
                    Icon="@HomeBookIcons.Icons8.LiquidGlassColor.Communication">
            @Loc[nameof(LocalizationStrings.Settings_NavMenu_Feedback_Text)]
        </MudNavLink>

    </MudNavMenu>

</MudPaper>
