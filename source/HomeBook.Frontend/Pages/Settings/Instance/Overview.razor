@page "/Settings/Instance"

@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.Core.Icons

@inject ISnackbar Snackbar
@inject IInstanceManagementProvider InstanceManagementProvider
@inject IJsLocalStorageProvider JsLocalStorageProvider

<MudContainer Class="mt-4">

    <MudGrid>

        <MudItem xs="12" sm="12" md="4" lg="3" xl="3" xxl="2">

            <SettingsNavMenu/>

        </MudItem>

        <MudItem xs="12" sm="12" md="8" lg="9" xl="9" xxl="10">

            <MudForm @ref="_form" Model="_configurationModel" @bind-IsValid="_isValid">

                <MudCard>

                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h5">Instance Configuration</MudText>
                            <MudText Typo="Typo.caption">Manage your instance preferences</MudText>
                        </CardHeaderContent>
                    </MudCardHeader>

                    <MudCardContent Class="pa-0">

                        <UiSettingsItem Icon="@HomeBookIcons.Icons8.Windows11.Filled.Tag"
                                        IconHexColor="var(--hb-settings-color-instance-name)"
                                        Title="HomeBook Name"
                                        Caption="set a custom name for your homebook">
                            <MudTextField @bind-Value="_configurationModel.InstanceName"
                                          Margin="Margin.Dense"
                                          Variant="Variant.Outlined"
                                          For="@(() => _configurationModel.InstanceName)"
                                          Immediate="true"/>
                        </UiSettingsItem>

                        <MudDivider/>

                        <UiSettingsItem Icon="@HomeBookIcons.Icons8.Windows11.Filled.Translation"
                                        IconHexColor="var(--hb-settings-color-default-language)"
                                        Title="Language"
                                        Caption="Choose your preferred language">
                            <MudSelect T="string"
                                       Margin="Margin.Dense"
                                       Variant="Variant.Outlined">
                                <MudSelectItem T="string">English</MudSelectItem>
                                <MudSelectItem T="string">Deutsch</MudSelectItem>
                            </MudSelect>
                        </UiSettingsItem>

                    </MudCardContent>

                    <MudCardActions Class="justify-end">
                        <MudButton Variant="Variant.Filled"
                                   Color="Color.Primary"
                                   OnClick="UpdateInstanceNameAsync"
                                   Disabled="@(!_isValid || _isLoading)">
                            @if (_isLoading)
                            {
                                <MudProgressCircular Size="Size.Small"
                                                     Indeterminate="true"
                                                     Class="mr-2"/>
                            }
                            Save Changes
                        </MudButton>
                    </MudCardActions>

                </MudCard>

            </MudForm>

        </MudItem>

    </MudGrid>

</MudContainer>
