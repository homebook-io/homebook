<div class="ui-settings-item d-flex flex-column flex-md-row justify-md-space-between align-start w-100 pa-3">

    <!-- Header section (Icon + Title/Caption) -->
    <div class="d-flex align-start w-100 flex-md-grow-1">
        @if (Icon is not null)
        {
            <div class="d-flex align-start justify-center me-4">
                <div class="ui-settings-item-icon">
                    <UiIcon IconStyle="UiIconStyle.Filled"
                            Icon="@Icon"
                            Color="@IconColor"
                            ColorValue="@IconHexColor"
                            Class="mt-1"/>
                </div>
            </div>
        }

        <div class="d-flex flex-column align-start flex-grow-1">
            <div class="ui-settings-item-title">
                <MudText Typo="Typo.h6">@Title</MudText>
            </div>
            <div class="ui-settings-item-caption">
                <MudText Typo="Typo.caption">@Caption</MudText>
            </div>
        </div>
    </div>

    @if (ChildContent is not null)
    {
        <div class="d-flex align-start justify-start justify-md-end w-100 flex-md-grow-0 mt-3 mt-md-0">
            <div class="ui-settings-item-content">
                @ChildContent
            </div>
        </div>
    }
</div>
