@using HomeBook.Client
@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.Properties

@inject ILocalizationProvider Loc
@inject ISetupService SetupService
@inject BackendClient BackendClient

<MudCard Class="frosted-b3 mud-elevation-6">

    <MudCardHeader Class="no-divider">
        <CardHeaderContent>
            @if (_updateSuccessful && !_updateFailed)
            {
                <MudText Typo="Typo.h4">
                    @Loc[nameof(LocalizationStrings.Update_ProcessFinished_Title)]
                </MudText>
            }
            else
            {
                <MudText Typo="Typo.h4">
                    @Loc[nameof(LocalizationStrings.Update_Process_Title)]
                </MudText>
            }
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent Class="no-divider">

        @if (_updateIsRunning)
        {
            <div class="relative d-flex flex-grow-1 flex-wrap flex-column justify-center align-center">
                <MudProgressLinear Color="Color.Primary"
                                   Indeterminate="true"
                                   Class="my-7"/>
            </div>
        }

        @if (!_updateIsRunning)
        {
            @if (!_updateSuccessful && !_updateFailed)
            {
                <UiCountdownAlert Class="mt-3"
                                  Duration="TimeSpan.FromSeconds(5)"
                                  OnFinished="async () => await OnStartUpdateCountdownFinishedAsync()"
                                  Severity="Severity.Info">
                    @Loc[nameof(LocalizationStrings.Update_Process_UpdateIsPrepared_Message)]
                </UiCountdownAlert>
            }

            @if (_updateSuccessful && !_updateFailed)
            {
                <div class="d-flex flex-column justify-center flex-grow-1 gap-4">
                    <MudText Typo="Typo.body1"
                             Class="mb-3">
                        @Loc[nameof(LocalizationStrings.Update_Process_Finished_Success_Message)]
                    </MudText>
                    <MudButton OnClick="OnStartHomeBookAsync"
                               Size="Size.Large"
                               Variant="Variant.Filled"
                               Color="Color.Primary">
                        @Loc[nameof(LocalizationStrings.Update_Process_Finished_StartHomeBook_Message)]
                    </MudButton>
                </div>
            }

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Class="mt-3"
                          Severity="Severity.Error">
                    @_errorMessage
                </MudAlert>

                <MudButton Color="Color.Primary"
                           Variant="Variant.Filled"
                           Class="mt-3"
                           StartIcon="@Icons.Material.TwoTone.Autorenew"
                           OnClick="async () => await StartUpdateAsync()">
                    @Loc[nameof(LocalizationStrings.Update_Process_Retry_Button_Text)]
                </MudButton>
            }
        }

    </MudCardContent>

</MudCard>
