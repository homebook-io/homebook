@using HomeBook.Client
@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.UI.Resources
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<LocalizationStrings> Loc
@inject IConfiguration Configuration
@inject ISetupService SetupService
@inject BackendClient BackendClient

<MudCard Class="frosted-b3 mud-elevation-6">

    <MudCardHeader Class="no-divider">
        <CardHeaderContent>
            <MudText Typo="Typo.h4">
                @Loc[nameof(LocalizationStrings.Setup_BackendConnection_Title)]
            </MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent Class="no-divider">

        @if (_isChecking)
        {
            <div class="relative d-flex flex-grow-1 flex-wrap flex-column justify-center align-center">
                <MudProgressLinear Color="Color.Primary"
                                   Indeterminate="true"
                                   Class="my-7"/>
            </div>
        }

        @if (!_isChecking)
        {
            @if (_serverIsOk)
            {
                <UiCountdownAlert Class="mt-3"
                                  Duration="TimeSpan.FromSeconds(5)"
                                  OnFinished="async () => await OnCountdownFinishedAsync()"
                                  Severity="Severity.Info">
                    @Loc[nameof(LocalizationStrings.Setup_BackendConnection_ServerFound_Text)]
                </UiCountdownAlert>
            }

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <MudAlert Class="mt-3"
                          Severity="Severity.Error">
                    @_errorMessage
                </MudAlert>

                <MudButton Color="Color.Primary"
                           Variant="Variant.Filled"
                           Class="mt-3"
                           StartIcon="@Icons.Material.TwoTone.Autorenew"
                           OnClick="async () => await StartAsync()">
                    @Loc[nameof(LocalizationStrings.Setup_BackendConnection_Retry_Button_Text)]
                </MudButton>
            }
        }

    </MudCardContent>

</MudCard>
