@using HomeBook.Client
@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.Models.Setup

@inject ISetupService SetupService
@inject BackendClient BackendClient

<MudCard Class="frosted-b3 mud-elevation-6">

    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h4">License Agreement</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>

        @foreach (LicenseViewModel license in _licenses)
        {
            <article>
                <MudText Typo="Typo.h6">@license.Name</MudText>
                @((MarkupString)license.HtmlContent)
            </article>
        }

    </MudCardContent>

</MudCard>
