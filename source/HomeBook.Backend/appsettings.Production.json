{
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u4}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "/var/lib/homebook/logs/log-.txt",
                    "rollingInterval": "Hour",
                    "retainedFileCountLimit": 168,
                    "fileSizeLimitBytes": null,
                    "rollOnFileSizeLimit": false,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] {Message:lj} <-- {SourceContext} {Properties:j}{NewLine}{Exception}"
                }
            }
        ]
    }
}
