            <MudStep Title="+Zusammenfassung">

                <MudContainer MaxWidth="MaxWidth.Small"
                              Class="my-10">

                    <MudText Typo="Typo.h4"
                             Align="Align.Center"
                             Class="mb-5">
                        +Dein Sparziel zusammengefasst
                    </MudText>

                    <MudText Typo="Typo.h6"
                             Align="Align.Center"
                             Class="mb-5">
                        @_model.Name
                    </MudText>

                    <MudText Typo="Typo.body1"
                             Align="Align.Center"
                             Class="mb-5">
                        +Dein Sparziel: @_model.TargetAmount.ToString("C")
                    </MudText>

                    @if (_model.TargetDate is not null)
