@page "/Finances"

@using HomeBook.Frontend.Abstractions.Contracts
@using HomeBook.Frontend.Core.Icons
@using HomeBook.Frontend.Module.Finances.Components
@using HomeBook.Frontend.Module.Finances.Resources
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<Strings> Loc
@inject IMenuService MenuService

<UiPageTitle>+Finanzen</UiPageTitle>

<MudContainer Class="mt-4">

    <MudGrid>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <UiValueCard Color="var(--hb-color-cerulean)"
                         Icon="@HomeBookIcons.Icons8.Windows11.Filled.Wallet"
                         Title="+Gesamtsaldo"
                         ValueDisplay="12.547,89 €"
                         FooterHighlightedText="+2,5%"
                         FooterNotice="vs letzter Monat"/>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <UiValueCard Color="var(--hb-color-crimson)"
                         Icon="@HomeBookIcons.Icons8.Windows11.Filled.CardMagnetic"
                         Title="+Ausgaben"
                         ValueDisplay="12.547,89 €"
                         FooterHighlightedText="+2,5%"
                         FooterNotice="vs letzter Monat"/>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <UiValueCard Color="var(--hb-color-emerald)"
                         Icon="@HomeBookIcons.Icons8.Windows11.Filled.ChartArrowRise"
                         Title="+Einnahmen"
                         ValueDisplay="12.547,89 €"
                         FooterHighlightedText="+2,5%"
                         FooterNotice="vs letzter Monat"/>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <UiValueCard Color="var(--hb-color-lavender)"
                         Icon="@HomeBookIcons.Icons8.Windows11.Filled.MoneyBox"
                         Title="+Sparziele"
                         ValueDisplay="12.547,89 €"
                         FooterHighlightedText="+2,5%"
                         FooterNotice="vs letzter Monat"/>

        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Konten
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                </MudCardContent>

            </MudCard>

        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Ausgaben
                    </MudText>
                </MudCardHeader>

                <MudCardContent>
                    <MudChart ChartType="ChartType.Donut"
                              @bind-SelectedIndex="Index"
                              InputData="@data"
                              InputLabels="@labels"/>

                    @code {
                        private int Index = -1; //default value cannot be 0 -> first selectedindex is 0.
                        int dataSize = 4;
                        public double[] data = { 50, 25, 20, 5 };
                        public string[] labels = { "+Daueraufträge", "+Sparpläne", "+Hobby", "+Sonstige" };
                    }
                </MudCardContent>

            </MudCard>

        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">
            <HbSavingGoalsOverviewList/>
        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="8" xl="8" xxl="8">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Letzte Transaktionen
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                </MudCardContent>

            </MudCard>

        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Schnellzugriff
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                    <MudList T="string">

                        <MudListItem Class="rounded"
                                     Text="+Transaktion hinzufügen"
                                     Href="#"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.Plus"/>

                        <MudListItem Class="rounded"
                                     Text="+Budget erstellen"
                                     Href="#"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.ChartCircle"/>

                        <MudListItem Class="rounded"
                                     Text="+Einstellungen"
                                     Href="/Finances/Settings"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.Gear"/>

                    </MudList>

                </MudCardContent>

            </MudCard>

        </MudItem>

    </MudGrid>

</MudContainer>
