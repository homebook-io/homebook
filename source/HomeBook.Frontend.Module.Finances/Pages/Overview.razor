@page "/Finances"

@using HomeBook.Frontend.Core.Icons

<UiPageTitle>+Finanzen</UiPageTitle>

<MudContainer Class="mt-4">

    <MudGrid>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <MudPaper Class=" py-20 px-3">
                gesamtsaldo
            </MudPaper>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <MudPaper Class=" py-20 px-3">
                ausgaben
            </MudPaper>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <MudPaper Class=" py-20 px-3">
                einnahmen
            </MudPaper>

        </MudItem>

        <MudItem xs="6" sm="6" md="3" lg="3" xl="3" xxl="3">

            <MudPaper Class=" py-20 px-3">
                sparziele
            </MudPaper>

        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Konten
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                </MudCardContent>

            </MudCard>

        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Ausgaben
                    </MudText>
                </MudCardHeader>

                <MudCardContent>
                    <MudChart ChartType="ChartType.Donut"
                              @bind-SelectedIndex="Index"
                              InputData="@data"
                              InputLabels="@labels"/>

                    @code {
                        private int Index = -1; //default value cannot be 0 -> first selectedindex is 0.
                        int dataSize = 4;
                        public double[] data = { 50, 25, 20, 5 };
                        public string[] labels = { "+Daueraufträge", "+Sparpläne", "+Hobby", "+Sonstige" };
                    }
                </MudCardContent>

            </MudCard>

        </MudItem>
        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>

                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">
                            +Sparziele
                        </MudText>
                    </CardHeaderContent>

                    <CardHeaderActions>
                        <MudButton Variant="Variant.Text"
                                   Color="Color.Primary">
                            +Neues Ziel
                        </MudButton>
                    </CardHeaderActions>

                </MudCardHeader>

                <MudCardContent>

                    <MudList T="string">

                        <MudListItem Href="#" Class="rounded">
                            <UiProgressItem HeaderTextStart="Urlaub Italien"
                                            HeaderTextEnd="75%"
                                            ProgressValue="75"
                                            FooterTextStart="1.500 € von 2.000 €"
                                            FooterTextEnd="500 € verbleibend"
                                            ProgressColor="Color.Warning"/>
                        </MudListItem>

                        <MudListItem Href="#" Class="rounded">
                            <UiProgressItem HeaderTextStart="Neues Auto"
                                            HeaderTextEnd="42%"
                                            ProgressValue="42"
                                            FooterTextStart="8.400 € von 20.000 €"
                                            FooterTextEnd="11.600 € verbleibend"
                                            ProgressColor="Color.Success"/>
                        </MudListItem>

                        <MudListItem Href="#" Class="rounded">
                            <UiProgressItem HeaderTextStart="Notgroschen"
                                            HeaderTextEnd="88%"
                                            ProgressValue="88"
                                            FooterTextStart="4.400 € von 5.000 €"
                                            FooterTextEnd="600 € verbleibend"
                                            ProgressColor="Color.Primary"/>
                        </MudListItem>

                    </MudList>

                </MudCardContent>

            </MudCard>

        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="8" xl="8" xxl="8">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Letzte Transaktionen
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                </MudCardContent>

            </MudCard>

        </MudItem>

        <MudItem xs="12" sm="12" md="6" lg="4" xl="4" xxl="4">

            <MudCard>

                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        +Schnellzugriff
                    </MudText>
                </MudCardHeader>

                <MudCardContent>

                    <MudList T="string">

                        <MudListItem Class="rounded"
                                     Text="+Transaktion hinzufügen"
                                     Href="#"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.Plus"/>

                        <MudListItem Class="rounded"
                                     Text="+Budget erstellen"
                                     Href="#"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.ChartCircle"/>

                        <MudListItem Class="rounded"
                                     Text="+Einstellungen"
                                     Href="/Finances/Settings"
                                     Icon="@HomeBookIcons.Icons8.Windows11.Filled.Gear"/>

                    </MudList>

                </MudCardContent>

            </MudCard>

        </MudItem>

    </MudGrid>

</MudContainer>
