<MudTextField T="string"
              @bind-Value="@Description"
              Label="+Beschreibung"
              Variant="Variant.Outlined"
              Lines="5"/>

<MudPaper Class="frosted-b1 text-dark mt-5 pa-3">

    <MudToolBar Dense="true"
                Class="px-0">

        @switch (Servings)
        {
            case 1:
                <MudText Typo="Typo.body1">
                    +Für 1 Portion
                </MudText>
                break;
            default:
                <MudText Typo="Typo.body1">
                    +Für <b>@Servings</b> Portionen
                </MudText>
                break;
        }

        <MudSpacer/>

        <UiNumericGroup @bind-Value="@Servings"
                        Min="1"
                        Step="1"/>

    </MudToolBar>

</MudPaper>
